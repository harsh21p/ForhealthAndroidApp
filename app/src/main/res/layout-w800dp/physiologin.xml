<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.388"
        app:srcCompat="@drawable/forhealth_logo_2" />

    //MainCardLayout

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:outlineAmbientShadowColor="#5AA4F4"
        android:outlineSpotShadowColor="#559EED"
        app:cardCornerRadius="15dp"
        app:cardElevation="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/physiotherapistcard"
                android:layout_width="479dp"
                android:layout_height="646dp"
                android:layout_marginStart="380dp"
                android:layout_marginLeft="380dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="19dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/physio"
                            android:layout_width="319dp"
                            android:layout_height="391dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="99dp"
                            android:src="@drawable/artboard_11" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/physio"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="57dp"
                            android:fontFamily="@font/ralewaymedium"
                            android:text="Hello!"
                            android:textColor="#082F6A"
                            android:textFontWeight="800"
                            android:textSize="30dp"


                            />

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="300dp"
                android:layout_marginRight="300dp"
                app:layout_constraintBottom_toBottomOf="@+id/physiotherapistcard"
                app:layout_constraintEnd_toEndOf="parent"


                app:layout_constraintTop_toTopOf="@+id/physiotherapistcard">

                <androidx.cardview.widget.CardView
                    android:id="@+id/signup"
                    android:layout_width="479dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="#EEF0F6"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="4dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ralewaymedium"
                            android:gravity="center_horizontal"
                            android:text="Register"
                            android:textAlignment="center"
                            android:textColor="#042A73"
                            android:textFontWeight="800"
                            android:textSize="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/login"
                    android:layout_width="479dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/signup"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="92dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#EEF0F6"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="4dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/logintxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ralewaymedium"
                            android:gravity="center_horizontal"
                            android:text="Login"
                            android:textAlignment="center"
                            android:textColor="#042A73"
                            android:textFontWeight="800"
                            android:textSize="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/physiotherapistcard">

                <View
                    android:id="@+id/ellipse_104"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/circle4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/ellipse_105"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/circle4"
                    app:layout_constraintBottom_toBottomOf="@+id/ellipse_104"
                    app:layout_constraintStart_toEndOf="@+id/ellipse_104"
                    app:layout_constraintTop_toTopOf="@+id/ellipse_104"
                    app:layout_constraintVertical_bias="0.0" />

                <View
                    android:id="@+id/ellipse_106"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/circle"
                    app:layout_constraintBottom_toBottomOf="@+id/ellipse_104"
                    app:layout_constraintStart_toEndOf="@+id/ellipse_105"
                    app:layout_constraintTop_toTopOf="@+id/ellipse_104" />

                <View
                    android:id="@+id/ellipse_107"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/circle4"
                    app:layout_constraintBottom_toBottomOf="@+id/ellipse_104"
                    app:layout_constraintStart_toEndOf="@+id/ellipse_106"
                    app:layout_constraintTop_toTopOf="@+id/ellipse_104" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/backbtnp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:foreground="@drawable/buttonlayout"
        app:cardBackgroundColor="#EEF0F6"

        app:cardCornerRadius="160dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:scaleType="centerCrop"
                android:src="@drawable/back" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>