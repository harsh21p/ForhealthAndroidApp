<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  left shadow -->

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#FFFF" android:width="2dp" />
            <gradient
                android:angle="180"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:endColor="#00FF0000"
                android:startColor="#AE03A9F4" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#FFFF" android:width="2dp" />
            <gradient
                android:angle="360"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:endColor="#00FF0000"
                android:startColor="#AE03A9F4" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>

        <shape android:shape="rectangle">
            <stroke android:color="#FFFF" android:width="2dp" />
            <gradient
                android:angle="270"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:endColor="#00FF0000"
                android:startColor="#AE03A9F4" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#FFFF" android:width="2dp" />
            <gradient
                android:angle="90"
                android:endColor="#00FF0000"
                android:startColor="#AE03A9F4"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
               />
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>